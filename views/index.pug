extends default

block content
  div.container
    each person in people
      div.person
         div.person-image(style=`background: url('/images/${person.imgSrc}')
         top left no-repeat; background-size: contain;`)
         h2.person-name
           | #{person.firstname} #{person.lastname}
         <p> #{person.bio} </p>
         a(href=`/profile?id=${person.id};`)
              | View Profile
